{
  globFiles: [
    {
      path: "assets/text",
      glob: "*",
      prefix: "text/",
    },
    {
      path: "assets/font",
      glob: "*",
      prefix: "font/",
    },
  ],
  textures: {
    spritesheet: {
      maxWidth: 512,
      maxHeight: 512,
      // sadly we have to disable this until
      // https://github.com/LaurentGomila/SFML/issues/676
      // is resolved.
      allowRotate90: false,

      globImages: [
        {
          path: "assets/img/",
          glob: "*",
          prefix: "img/",
        },
      ],
    }
  }
}

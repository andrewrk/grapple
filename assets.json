{
  globFiles: [
    {
      path: "assets/text",
      glob: "*",
      prefix: "text/",
    },
    {
      path: "assets/font",
      glob: "*",
      prefix: "font/",
    },
  ],
  textures: {
    spritesheet: {
      maxWidth: 512,
      maxHeight: 512,
      // sadly we have to disable this until
      // https://github.com/LaurentGomila/SFML/issues/676
      // is resolved.
      allowRotate90: false,

      globImages: [
        {
          path: "assets/img/",
          glob: "walk-*.png",
          prefix: "img/",
        },
        {
          path: "assets/img/",
          glob: "jump-*.png",
          prefix: "img/",
        },
      ],

      images: {
        "img/graybox.png": {
          path: "assets/img/graybox.png",
        },
        "img/man.png": {
          path: "assets/img/man.png",
        },
        "img/arm.png": {
          path: "assets/img/arm.png",
          anchor: {
            x: 4,
            y: 12,
          },
        },
        "img/claw.png": {
          path: "assets/img/claw.png",
        },
        "img/claw-retracted.png": {
          path: "assets/img/claw-retracted.png",
        },
        "img/claw-attached.png": {
          path: "assets/img/claw-attached.png",
        },
      },
    }
  }
}
